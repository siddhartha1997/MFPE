@model IEnumerable<BankPortalMVC.Models.AccountMsg>

@{
    ViewData["Title"] = "AccountStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            text-align: center;
        }

        table {
            text-align: center
        }

        #hd {
            text-align: right
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <span class="navbar-brand">Customer Account Details</span>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="Index"><i class='fas fa-home' style='font-size:48px;color:red'></i></a>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link text-dark" onclick="window.print()"><i class='fas fa-print' style='font-size:48px;color:red'></i></button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!--<h1>Account Details</h1>
    <div id="hd"><a asp-action="Index">Go to Home Page</a></div>-->
    <table class="table">
        <thead>
            <tr>
                <td>
                    Account ID
                </td>
                <th>
                    Account Type
                </th>
                <th>
                    Account Balance
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccBal)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>